{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "ES2021"
    ],
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "gif-encoder-2": ["./typings/gif-encoder-2.d.ts"],
    },
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}
