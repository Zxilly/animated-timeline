{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "typeRoots" : ["./node_modules/@types",
      "./src/typings"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": ".",
