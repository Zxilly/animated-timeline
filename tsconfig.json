{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "module": "ESNext",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "rollup.config.ts",
    "jest.config.ts"
  ]
}
