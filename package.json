{
  "name": "animated-timeline",
  "version": "0.0.1",
  "private": true,
  "description": "GitHub action to create an animated timeline from contributions",
  "type": "commonjs",
  "main": "src/action.ts",
  "scripts": {
    "build": "esbuild src/action.ts --sourcemap=inline --platform=node --bundle --external:canvas --loader:.otf=binary --target=node20 --outfile=dist/index.js",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zxilly/animated-timeline.git"
  },
  "author": "Zxilly <zxilly@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@jest/globals": "^29.7.0",
    "@octokit/graphql-schema": "^14.56.0",
    "@types/bezier-js": "^4.1.3",
    "@types/gifsicle": "^5.2.2",
    "@types/jest": "^29.5.12",
    "@types/matter-js": "^0.19.6",
    "@types/node": "^20.11.19",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/parser": "^7.0.1",
    "bezier-js": "^6.1.4",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.8.0",
    "gif-encoder-2": "^1.0.5",
    "jest": "^29.7.0",
    "matter-js": "^0.19.0",
    "opentype.js": "^1.3.4",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "poly-decomp-es": "^0.4.2"
  }
}
